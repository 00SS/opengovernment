- content_for :head do
  = auto_discovery_link_tag(:atom, major_actions_bill_path(@bill.session, @bill, :format => :atom), {:title => "Major Actions"})
  = auto_discovery_link_tag(:atom, actions_bill_path(@bill.session, @bill, :format => :atom))

- title("#{@bill.state.name} #{@bill.chamber.name} Bill #{@bill.bill_number}")
- track(@bill)
- tweets(@bill.to_hashtags, 2)

= render 'wrapper', :show_tools => true

.grid_12
  .grid_12.alpha
    %span.session Session: #{raw @bill.session.name_fm}

    = render 'shared/view_counts', :page => @bill

  %hr
  
  .grid_12.alpha
    %p.grid_12.alpha.summary= @bill.title

  - status_bar(@bill)
  .clear

  .grid_6.alpha
    %h2 Sponsors
    = sponsor_mugs(@sponsors)
    %ul.lined
      - @sponsors.each do |s|
        - if !s.sponsor_id || s.sponsor.photo_url.blank?
          %li
            - surround '',',' do
              = s.sponsor_id? ? link_to(s.sponsor.full_name, person_path(s.sponsor)) : s.sponsor_name
            = s.kind_fm

  .grid_6.omega
    - if @bill.versions.count > 0
      %h2 Bill Text
  
      %ul.lined
        - @bill.versions.each do |version|
          %li= link_to_document(version)

    - if @bill.documents.count > 0
      %h2 Documents

      %ul.lined
        - @bill.documents.each do |document|
          %li= link_to_document(document)

  .space

  - if @actions.limit(2).size > 0
    .grid_12.alpha
      %h2 Recent Actions
      #bill_actions
        = render 'actions_table', :actions => @actions.limit(2)
        = link_to(raw("All #{pluralize(@actions.size, 'Action')} &rarr;"),  votes_bill_path(@bill.session, @bill))

  %hr.push_top

  - if @votes.limit(2).size > 0
    .grid_12.alpha
      %h2 Recent Votes
      %table.vote-summary.grid_12.alpha
        %tbody
          = render @votes

      = link_to(raw("All #{pluralize(@votes.size, 'Vote')} &rarr;"), votes_bill_path(@bill.session, @bill))

  .space

  .grid_12.alpha
    #twitter(style="display: none;")
      %h2 Tweets
      #notweets(style="display: none;")
        %p Sorry, there were no tweets found for #{@bill.bill_number}.
      %ul#tweets
