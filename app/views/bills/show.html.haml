- content_for :head do
  = auto_discovery_link_tag(:atom, {:format => :atom}, {:title => "Bill Actions"})

%div.span-24.last
  %hgroup
    %h3= "Bill #{@bill.bill_number}"
    %h4= @bill.title
  %p
    %div
      = "State: #{@bill.state.name}"
    %div
      = "Session: #{@bill.session.start_year} - #{@bill.session.end_year}"
    %div
      = "Chamber: #{@bill.chamber.name}"

  %h4 Sponsors

  %p
    - @bill.sponsors.each do |sponsor|
      %div
        = link_to(sponsor.full_name, person_path(sponsor))

  - if @bill.actions.size > 0
    %h4 Actions
    %div.span-24.last
      %table.bill_actions
        %tr
          %th Date
          %th Chamber
          %th Action
        - @bill.actions.each do |action|
          %tr
            %td= action.date.to_s(:pretty)
            %td= action.actor_fm
            %td= action.action

  %h4 Versions

  %p
    - @bill.versions.each do |version|
      %div
        = link_to(version.name, version.url)

  - if @bill.votes.size > 0
    %h4 Votes

    %p
      - @bill.votes.each do |vote|
        %p
          %div
            = "Motion: #{vote.motion}"
          %div
            = "YES count: #{vote.yes_count}"
          %div
            = "NO count: #{vote.no_count}"
          %div
            = "Other count: #{vote.other_count}"
          %div
            = "Passed: #{vote.passed? ? "Yes": "No"}"
          %div
            = link_to "Full roll call data &rarr;", state_vote_url(@state, vote)

  - if @bill.citations.size > 0
    %h4 Citations

    %div.span-8
      %h4 Google News
      - @bill.google_news_citations.each do |citation|
        %span
          = link_to citation.title, citation.url
          %div
            = truncate(citation.excerpt, 100)

    %div.span-8
      %h4 Blogs
      - @bill.google_blog_citations.each do |citation|
        %span
          = link_to citation.title, citation.url
          %div
            = truncate(citation.excerpt, 100)

    %div.span-8.last
      %h4 Technorati
      = @bill.technorati_citations.each do |citation|
        %span
          = link_to citation.title, citation.url
          %div
            = truncate(citation.excerpt, 100)

  %div.social
    %p Tweet this bill using the hashtags #{@bill.to_hashtags}