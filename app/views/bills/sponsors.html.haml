- title("All Sponsors of #{@bill.bill_number}")

%h2 
  = t('.all_sponsors_of', :bill_number => @bill.bill_number)


.grid_4.alpha
  .sponsor_mugs
    %ul.lined.sponsors
      = render @sponsors[0...@sponsors.size/2]

.grid_4.omega
  .sponsor_mugs
    %ul.lined.sponsors
      = render @sponsors[@sponsors.size/2..@sponsors.size]
