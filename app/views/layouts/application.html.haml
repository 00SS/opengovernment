!!! 5
%html
  %head
    %meta(charset="utf-8")
    %link(rel="stylesheet" href="http://frame.serverboy.net/latest/" type="text/css")
    = include_stylesheets :basic
    <!--[if lt IE 9]>
    %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")
    <![endif]-->
    = javascript_include_tag 'jquery-1.4.2.min.js'
    %title= "OpenGovernment - " + (yield(:title) || "revealing state and local government data")
  %body
  %div#container
    %div#flash
      - flash.each do |key, value|
        %div(id="flash_#{key}")
          =h value
    = yield