= render 'nav'

.grid_12.omega

  %h1
    = @person.official_name
    .subhead
      #{@person.current_role.try(:party)}, #{@person.try(:district_name)}


  - if defined?(show_tools)
    %aside.take_action.full_lined
      = render :partial => 'shared/share_tools', :locals => {:message => "Share", :title => (yield(:title) || "OpenGovernment"), :url => request.url}
      .hov.track_buttons
        %h4.button
          %span Track
          .arrow
        .drop.button
          %ul
            %li.rss
              = link_to "All Votes - RSS", {:format => :atom}
            %li.email 
              %a
                %span
                Email Alerts (coming soon)

      .write_button
        %span.button
          %span= link_to('Contact this rep', {:action => :contact}, :class => 'modal')

      .support_buttons
        %a.support.button(rel='tipsy' title='Give a personal vote "aye" or "nay" for this person &mdash; coming soon!')
          %span I Support this Rep!
        %a.oppose.button(rel='tipsy' title='Give a personal vote "aye" or "nay" for this person &mdash; coming soon!')
          %span I Oppose this Rep!
