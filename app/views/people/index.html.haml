- title("#{@state.name} Representatives")
.grid_16
  %h1= "#{@state.name} Representatives"
  %hr
  - @state.chambers.each do |chamber|
    %div.grid_4.alpha[chamber]
      %h3= chamber.name
      %ul.lined
        - chamber.people.each do |rep|
          %li!= link_to(rep.full_name, person_path(rep), :class => rep.gender_class) + (rep.current_role ? ", #{rep.current_role.affiliation_fm}" : "")