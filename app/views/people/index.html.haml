- @people.group_by { |p| p.roles.first.chamber.legislature }.each do |legislature, reps|
  %h2(id="legislature-#{legislature.to_param}")= legislature.name
  - reps.group_by { |r| r.roles.first.chamber }.each do |chamber, c_reps|
    %div(id="chamber-#{chamber.to_param}" class="#{chamber.type.underscore}")
      %h3= chamber.name
      %ul
        - c_reps.each do |rep|
          %li!= link_to(rep.full_name, person_path(rep)) + (rep.roles.first.district.nil? ? "" : ", #{rep.roles.first.district.name}")
