- title(@person.official_name)
- content_for :head do
  = auto_discovery_link_tag(:atom, {:format => :atom}, {:title => "Votes by #{@person.official_name}"})
- track(@person)
- tweets(@person.full_name, 2)



= render(:partial => 'wrapper', :locals => {:show_tools => true})




.grid_12
  = render :partial => 'shared/view_counts', :locals => {:page => @person}

  %hr

  .grid_6.alpha
    %h2 General Info

    .grid_2.alpha
      = photo_for(@person)

    %ul.grid_4.omega
      - if @person.birthday?
        %li= "Born #{@person.birthday}"
      - if @person.gender?
        %li{:class => @person.gender} Gender: #{@person.gender}
      - if @person.religion?
        %li= "Religion: #{@person.religion}"
      - if @person.website_one?
        %li
          = link_to_with_domain("Website", @person.website_one)
      - if @person.website_two?
        %li
          = link_to_with_domain("Website", @person.website_two)
      - if @person.webmail?
        %li
          = link_to_with_domain("Web E-Mail", @person.webmail)
      - if @person.email?
        %li!= mail_to("E-Mail", @person.email, :encode => "javascript")
      - if @person.youtube_id?
        %li!= "Youtube: " + link_to(@person.youtube_id, @person.youtube_url)

  .grid_6.omega
    %h2 Bio
    - if @person.bio_data.blank?
      %p
        No biography was found on Wikipedia for #{@person.full_name}.
    - else
      %small.quiet.span
        From the non-partisan
        = link_to("Wikipedia", "http://en.wikipedia.org/wiki/#{@person.wiki_name}")
      %p
        = @person.bio_data
        = link_to(raw('More &rarr;'), "http://en.wikipedia.org/wiki/#{@person.wiki_name}")
 
  %hr.push_top

  .grid_12.alpha
    %h2 Addresses
    %ul.addresses
      - if @person.addresses.size > 0
        = render :partial => "shared/address", :collection => @person.addresses
      - else
        %p Sorry, we found no addresses.


  %hr.push_top

  .grid_12.alpha

    .grid_4.alpha
      %h2 Roles
      %p
        - @person.roles.each do |role|
          %div
            #{role.state.try(:name)} #{role.chamber.name}, session #{raw role.session.name_fm}
      - if @person.committees.size > 0

    .grid_4
      %h2 Committees
      %ul.lined
        - @person.committees.each do |committee|
          %li
            = committee.type_fm
            = link_to(committee.name, committee_path(committee))

    .grid_4.omega
      %h2 Votes
      - if @latest_roll_calls
        %div
          %div
            %ul
              - @latest_roll_calls.each do |roll_call|
                - vote = roll_call.vote
                %li
                  = raw "#{roll_call.vote_type.titleize} on #{link_to(vote.bill.bill_number, bill_path(vote.bill, vote.bill.session))}: #{link_to(vote.motion, vote_path(vote.id))} on #{vote.date}"

        %p
          != link_to("View All #{@person.votes.count} Votes", votes_person_path(@person))
      - else
        %p We have no voting history for #{@person.full_name}

  %hr.push_top


  #twitter(style="display: none;")
    %h2 Tweets
    .grid_6.alpha
      %ul#tweets

  .grid_12.alpha.omega
    %h2!= sponsorship_vitals_for(@person)

    %hr.push_top



  .grid_12.alpha
    %h2 Ratings
    - if @person.ratings
      .small.quiet.grid_24 From the non-partisan <a href="http://www.followthemoney.org/Institute/about_data.phtml"> Project Vote Smart</a>.
      - @person.ratings.each do |rating|
        %h3
          = rating.special_interest_group.category.name
        %ul.lined
          %li.grid_12.alpha
            %span.grid_10.alpha
              = link_to(rating.special_interest_group.name, sig_path(rating.special_interest_group))
            %span.grid_1
              = rating.timespan
            %span.grid_1.omega
              = rating.rating
    - else
      %p.grid_12.alpha
        No data found for this Member at this time via Project Vote Smart. To inquire how you can help make this info available and ensure transparency in government, visit
        %a{:href => 'http://votesmart.org/program_donations_index.php'} here
