- title("Action on #{@action.bill.title}")
%nav.grid_4
  #left_nav
    = render_navigation(:level => 1)

.action_date
  = @action.date.to_html
%p.action_text
  = "#{@action.bill.state.name} bill"
  = link_to(@action.bill.bill_number, bill_path(@action.bill.session, @action.bill))
  = @action.action_fm + "."
  - if @action.actor_fm
    = "by the #{@action.actor_fm}"
