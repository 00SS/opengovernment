- title(t '.committees', :which_committee => @state.name)

= render :partial => 'shared/appeal'

%h1
  = t '.committees', :which_committee => "#{@state.name} #{@committees.first && @committees.first.type_fm}"
%hr

= paginate @committees
%ul.lined
  - if @committees.size > 0
    - @committees.each do |committee|
      %li
        = link_to(committee.name, committee_path(:id => committee), :class => "modal")
  - else
    %p Sorry, we didn't find any committees.
= paginate @committees
