- title(@state.name)

.span-24.last
  .span-16
    %h2
      = @state.name
  %p.span-8.last
    = render :partial => 'search_form'

.span-18.last
  .span-18.last.full_lined.less_padding
    .span-4
      This Bill's Page Views
    .span-3
      Today - 3,456
    .span-4
      Past 30 Days - 67,987
    .span-4.last
      All-Time - 2,235,232


  .span-18.last
    .span-9
      = @state.legislature.name
      = @state.legislature.upper_chamber.name
      %br
      %img(src="http://localhost:8080/geoserver/wms?service=WMS&request=GetMap&version=1.1.1&layers=cite:v_district_people&bbox=#{@state.bbox.join(",")}&cql_filter=state_id+=+#{@state.id}+and+chamber_id+=+#{@state.legislature.upper_chamber.id}&width=300&height=300&format=image/png&SLD=http%3A%2F%2Flocalhost%3A3000%2Fpeople.xml" width="300" height="300")
    .span-9.last
      = @state.legislature.name
      = @state.legislature.lower_chamber.name
      %br
      %img(src="http://localhost:8080/geoserver/wms?service=WMS&request=GetMap&version=1.1.1&layers=cite:v_district_people&bbox=#{@state.bbox.join(",")}&cql_filter=state_id+=+#{@state.id}+and+chamber_id+=+#{@state.legislature.lower_chamber.id}&width=300&height=300&format=image/png&SLD=http%3A%2F%2Flocalhost%3A3000%2Fpeople.xml" width="300" height="300")


  .span-6
    %h3
      = Legislature::CONGRESS.name

    %p
      %h4
        = pluralize(@state.current_senators.size, Legislature::CONGRESS.upper_chamber.title)
      %p
        - @state.current_senators.each do |rep|
          %div
            = link_to(rep.full_name, person_path(rep))

      %h4
        = Legislature::CONGRESS.lower_chamber.name
      %p
        - @federal_lower_chamber_roles.each do |role|
          %div
            != link_to(role.person.full_name, person_path(role.person)) + ", #{role.district.name}"

  .span-6
    %h3
      = @state.legislature.name

    .span-6
      %h4
        = pluralize(@state_upper_chamber_roles.size, @state.legislature.upper_chamber.title)
      %p
        - @state_upper_chamber_roles.each do |role|
          %div
            != link_to(role.person.full_name, person_path(role.person)) + ", #{role.district.name}"
    .span-6.last
      %h4
        = pluralize(@state_lower_chamber_roles.size, @state.legislature.lower_chamber.title)
      %p
        - @state_lower_chamber_roles.each do |role|
          %div
            != link_to(role.person.full_name, person_path(role.person)) + ", #{role.district.name}"

  .span-6.last
    %h3 Bills
    %p
      Show all bills by:
      .bill_sort
        - Bill::SORTABLE_BY.each do |name, column|
          = link_to name, state_bills_path(@state, :sort => column)

    - if @state_key_votes.size > 0
      %h3 Key Votes
      .small.quiet From the non-partisan <a href="http://votesmart.org">Project Vote Smart</a>.
      %a(href="http://www.votesmart.org/glossary/define.php?term=key%20vote") What's a key vote?

      %p
        %ul.key_votes
          - @state_key_votes.each do |bill|
            %li
              != link_to(bill.bill_number, bill_path(@state, bill.session, bill)) + " "
              = bill.title


%aside.span-6.last
  %ul.sub_nav
    %li
      %a Assembly
      %ul
        %li
          %a Bills
    %li
      %a Senate
    %li
      %a Committees
    %li
      %a The Money Trail
