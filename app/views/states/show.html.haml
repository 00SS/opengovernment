- title(@state.name)

.grid_16
  %h1.grid_9.alpha
    = @state.name
  %hr


%nav.grid_4#left_nav
  = render_navigation(:level => 1)
  %p.donate= link_to 'Help Us Open Gov!', '/help/donate'

.grid_8
  %h2= @state.legislature.name
  = @state.legislature.primary_committees.count
  committees and 
  = @state.legislature.sub_committees.count
  sub-committees.

  - @state.chambers.each do |chamber|
    %h3= chamber.name
    = pluralize(chamber.people.count, chamber.title)
    .grid_4.alpha
      %h3= pluralize(chamber.people.democrats.count, 'Democrat')
      %h3= pluralize(chamber.people.republicans.count, 'Republican')
      %h3= pluralize(chamber.people.other.count, 'Other')
    .district_map
      = leg_map_img(@state, chamber)


  %hr.push_top

= render :partial => 'shared/find_my_rep_form'

.grid_4.omega
  %h2 Key Votes
  .small.quiet From the non-partisan <a href="http://votesmart.org">Project Vote Smart</a>.
  %a(href="http://www.votesmart.org/glossary/define.php?term=key%20vote") What's a key vote?

  %p
    %ul.lined.and_spaced
      - @state_key_votes.each do |bill|
        %li
          != link_to(bill.bill_number, bill_path(bill.session, bill)) + " "
          = bill.title


