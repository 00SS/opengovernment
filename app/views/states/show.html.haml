- title(@state.name)

.grid_16
  = render :partial => 'shared/find_my_rep_form'

.grid_16
  %h1.grid_9.alpha
    = @state.name
  %hr


= render :partial => 'shared/left_nav_toplevel'

.grid_12


  .grid_12.alpha
    .floatright.margin-top= link_to_with_domain('Official Site', @state.official_url)


    %h2= @state.legislature.name + ' - ' + @most_recent_session.name



    = raw t '.intro'




    - @state.chambers.each do |chamber|
      .grid_6.alpha
        %h3
          = chamber.name
          - surround '(', ')' do
            = link_to chamber.people.count, (chamber.type == 'UpperChamber' ? upper_people_path : lower_people_path)
        %ul.lined
          %li= pluralize(chamber.people.democrats.count, 'Democrat')
          %li= pluralize(chamber.people.republicans.count, 'Republican')
          - if chamber.people.other.count > 0
            %li= pluralize(chamber.people.other.count, 'Other')
        %h3.margin-top
          Committees
        %ul.lined
          %li= link_to pluralize(chamber.primary_committees.count, 'Committee'), chamber.type == 'UpperChamber' ? upper_committees_path : lower_committees_path
          %li= link_to pluralize(Bill.for_session(@most_recent_session).in_chamber(chamber).count, 'Bill'), bills_path
          %li= link_to pluralize(Bill.for_session(@most_recent_session).in_chamber(chamber).with_key_votes.count, 'Key Votes'), bills_path
          %li= link_to pluralize(@state.joint_committees.count, 'Joint Committee'), joint_committees_path
        %h3.margin-top
          Population
        %p= t (chamber.type == 'UpperChamber' ? '.state_pop_per_upper_chamber_member' : '.state_pop_per_lower_chamber_member')
        %ul.lined 
          %li= t '.state_population'
          %li= t '.last_election_date'
        .grid_6.alpha.district_map
          = leg_map_img(@state, chamber)

    %hr.push_top

    .grid_12.alpha.key_votes
      %h2 Key Votes
      .small.quiet From the non-partisan <a href="http://votesmart.org">Project Vote Smart</a>.
      %a.what(href="http://www.votesmart.org/glossary/define.php?term=key%20vote") What's a key vote?

      %p
        %ul.lined.and_spaced
          = render :partial => 'shared/bill', :collection => @state_key_votes
