%h1 Create a custom Most Viewed Bills Widget

.grid_8
  .widget_preview.grid_7.omega
    %h2 Live Preview of your widget
    #widgetPreview
      :javascript
        var testWidget = new OG.Widget({
          version: 1,
          type: 'most_viewed_people',
          state: '#{current_place_subdomain}',
          width: 250,
          preview: true,
          theme: {
            background: '#eee',
            color: '#555',
            header: '#333',
            links: '#00f'
          }
        }).render();

.widget_config.grid_8.omega.alpha
  %h2 Customize your widget

  %form
    .chooser
      %input(type="text" maxlength="6" size="6" class="color widgetVar" id="widgetBG" value="eee")
      %label(for="widgetBG") Background
  
    .chooser
      %input(type="text" maxlength="6" size="6" class="color widgetVar" id="widgetColor" value="555")
      %label(for="widgetColor") Text
  
    .chooser
      %input(type="text" maxlength="6" size="6" class="color widgetVar" id="widgetHeader" value="333")
      %label(for="widgetHeader") Header Text

    .chooser
      %input(type="text" maxlength="6" size="6" class="color widgetVar" id="widgetLinks" value="00f")
      %label(for="widgetLinks") Links


    #dimensions
      %label(for='widgetWidth') Width:
      %input(type="text" maxlength="3" size="3" id="widgetWidth" class="widgetVar" value="250")
      %span.note (in&nbsp;px)
      %p.small 
        (width changes do 
        %br
        not appear in the preview)

    .space

    #get_the_code
      %h2 Get the Code
      %textarea(id="embed-code")

